<h1> Transaction for <%= user.username %> </h1>

  <div class="row">
    <div class="col">
      <p> Here are the transactions </p>
      <ul class="list-group">
        <% items.forEach(item => { %>
            <li class="list-group-item">
              <span class="">
                <a href="transaction/remove/<%= item._id %>">
                  <i class="bi bi-trash"></i>
                </a>
              </span>
                <span class="mx-5"> 
                  <!--displaying each item's category, date,amount and description-->
                  <%=item.Category %><%=item.Date%><%=item.Amount%><%=item.Description%>
                </span>
                <a 
                   href="/transaction">
                  <i class="bi bi-pencil-square"></i>
              </a>
                
                  
            </li>
            <br>
        <% }) %>

            <form method="post" action="transaction">
              Category:<input type="text" name ="category" align = left>
              <br> 
              Date   : <input type="date" name="date" align = left> <!-- aline the boxes-->
              <br>
              Amount: <input type="number" name="amount" align = left>
              <br>
              Description: <input type="text" name="description" align = left>
              <input type="submit" value="store">
            </form>
      </div>
    </div>
</div>

    